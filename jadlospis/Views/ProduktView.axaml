<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:jadlospis.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Height="200"
             Width="150"
             x:Class="jadlospis.Views.ProduktView"
             x:DataType="vm:ProduktViewModel">
    
    <Border CornerRadius="10,10,0,0"
            Background="#009b72">
        <StackPanel>
            <Image Source="{Binding ImageBitmap}"/>
            <TextBlock Text="{Binding Name}"/>
            <Border Background="#f0faf3">
                <StackPanel>
                    <TextBlock Text="{Binding Gram}"/>
                    <TextBlock Text="{Binding Kcal}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
